<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finaleddmdp.proyectofinal.EditorCeldaController">
    <CheckBox fx:id="chkPenetrable" text="Penetrable"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Costo Movimiento:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Spinner fx:id="spnCostoMov" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="10" initialValue="1"/>
            </valueFactory>
        </Spinner>
        <Label text="Mod. Ataque:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Spinner fx:id="spnModAtaque" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="-10" max="10" initialValue="0"/>
            </valueFactory>
        </Spinner>
        <Label text="Mod. Defensa:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Spinner fx:id="spnModDefensa" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="-10" max="10" initialValue="0"/>
            </valueFactory>
        </Spinner>
        <Label text="Mod. Rango Mov:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Spinner fx:id="spnModRangoMov" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="-5" max="5" initialValue="0"/>
            </valueFactory>
        </Spinner>
        <Label text="Mod. Rango Atq:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Spinner fx:id="spnModRangoAtq" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="-5" max="5" initialValue="0"/>
            </valueFactory>
        </Spinner>
    </GridPane>
    <Button text="Guardar" onAction="#guardarCambios"/>
</VBox>
